<ElementType id="Package">
    <Icon path="icons/package.png" />
    <Connections>
        <!--Item value="Association" />
        <Item value="Generalization" with="Class" allowrecursive="0" /-->
    </Connections>
    <Attributes>
        <Item value="Name" type="str" propid="name" />
        <Item value="Scope" type="str">
            <Option value="public" />
            <Option value="private" />
            <Option value="protected" />
            <Option value="package" />
        </Item>
    </Attributes>
    <Appearance>
        <Shadow padding="3">
            <HBox>
                <VBox>
                    <Rectangle fill="lightpink2" border="black">
                        <Padding padding="5">
                            <TextBox align="left" text="#name" color="yellow" />
                        </Padding>
                    </Rectangle>
                    <Padding padding="15" />
                </VBox>
                <Rectangle fill="lightpink2" border="black">
                    <Padding padding="40" />
                </Rectangle>
            </HBox>
            <HBox>
                <VBox>
                    <Rectangle fill="#505050" border="#505050">
                        <Padding padding="5">
                            <TextBox align="left" text="#name" color="#505050" />
                        </Padding>
                    </Rectangle>
                    <Padding padding="15" />
                </VBox>
                <Rectangle fill="#505050" border="#505050">
                    <Padding padding="40" />
                </Rectangle>
            </HBox>
        </Shadow>
    </Appearance>
</ElementType>
